<h1>Blog Posts</h1>

<%= link_to "Add new post", new_post_path %>

<table>
  <thead>  
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to(post.title,post) %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %><td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %><td>
      </tr>
    <% end %>
  </tbody>
</table>